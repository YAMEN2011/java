import java.util.*;
public class test {
    public static void main(String[] args){
        Scanner in = new Scanner(System.in);
        
        System.out.print("Frist Number: ");
        int fristNum = in .nextInt();
        System.out.print("Second Number: ");
        int secondNum = in .nextInt();
        System.out.print("Which Operator (+,-,*,/): ");
        String Operator = in.next();

        in.close();

        switch(Operator){
            case"+":
                System.out.println(fristNum+secondNum);       
                break;
            case"-":
                System.out.println(fristNum-secondNum);       
                break;
            case"*":
                System.out.println(fristNum*secondNum);       
                break;
                case"/":
                System.out.println(fristNum/secondNum);       
                if (fristNum == 0)
                {
                    System.err.println("Can't Divide By Zero");
                }    
                break;
        }
    }
}
